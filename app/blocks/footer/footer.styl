.footer
	&__in
		@extends .in
		padding-top 60px
		padding-bottom 60px
	&__top
		margin-bottom 40px
		display none
		text-align center
		+r($m)
			display block
	&__to-top
		display inline-block
		vertical-align top
		width 60px
		font-size 12px
		color #000
		text-decoration none
	&__to-top-icon
		margin-bottom 10px
		width 12px
		height 5px
		display inline-block
		vertical-align top

	&__social
		margin-bottom 40px
	&__phone
		margin-bottom 40px
		text-align center
		font-family $rB
		font-size 24px
		color #333
		+r($m)
			font-size 22px
	&__phone-link
		text-decoration none
		color inherit
	&__emails
		margin-bottom 40px
		text-align center
		color #333
		font-size 0
	&__email
		margin-left 100px
		display inline-block
		vertical-align top
		color inherit
		font-size 18px
		font-family $rM
		text-decoration none
		&:first-child
			margin-left 0
		+r($t)
			margin-left 0
			display block
	&__bottom
		text-align center
		font-size 0
	&__copyright,
	&__privacy
		margin-left 48px
		display inline-block
		vertical-align top
		font-size 16px
		color #333
		&:first-child
			margin-left 0
		+r($t)
			margin-left 0
	&__privacy-link
		color inherit
		text-decoration none
